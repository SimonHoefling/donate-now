<div class="text-center">
  <h2>Log in</h2>
</div>


<div class="card w-50 mx-auto">
  <div class="card-body">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
      data: {turbo: false}) do |f| %>
      <div class="form-group">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "form-control" } %>
      </div>
      <div class="form-group">
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "form-control" } %>
      </div>
      <div class="form-group form-check">
        <%= f.input :remember_me, as: :boolean, label: "Remember me",
                    input_html: { class: "form-check-input" } if devise_mapping.rememberable? %>
      </div>

      <%= f.button :submit, "Log in", class: "btn btn-success" %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
